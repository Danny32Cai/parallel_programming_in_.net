<Window x:Class="CancelAfterTime.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Cancel After a Specified Time" Height="431" Width="620">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="182*"/>
            <ColumnDefinition Width="335*"/>
        </Grid.ColumnDefinitions>
        <Button x:Name="startButton" Content="Start" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="200" FontWeight="Bold"  Height="40" FontSize="14" Click="startButton_Click" />
        <Button x:Name="cancelButton" Content="Cancel" Margin="0,10,10,0" VerticalAlignment="Top" RenderTransformOrigin="0.187,-0.3" FontWeight="Bold"  Height="40" FontSize="14" Grid.Column="1" Click="cancelButton_Click" HorizontalAlignment="Right" Width="175" />
        <TextBox x:Name="resultsTextBox" TextWrapping="Wrap" SpellCheck.IsEnabled="True" FontFamily="Lucida Console" VerticalScrollBarVisibility="Visible" Background="#FFF9EEEC" Grid.ColumnSpan="2" Margin="0,55,10,0"/>
    </Grid>
</Window>